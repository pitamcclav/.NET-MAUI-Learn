<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Learn.Pages.Controls.CommonControls"
             Title="Common Controls"
             BackgroundColor="#EAEEFA">

    <ScrollView>
        <VerticalStackLayout >

            <VerticalStackLayout>
                <Frame BackgroundColor="LemonChiffon" Margin="10">
                    <VerticalStackLayout>
                        <Image Source="logo.png" HeightRequest="100" AnchorX="0" />
                        <Label Text="Welcome To CCAYEF" HorizontalOptions="Center" FontAttributes="Bold" FontSize="Large" Margin="10"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>

            <Border VerticalOptions="EndAndExpand" Padding="10" StrokeThickness="5" Stroke="#A8DF8E" >
                <Label Text="Rights reserved PC." HorizontalOptions="Center"/>
            </Border>

            <Frame BackgroundColor="AliceBlue" >
                <WebView Source="https://www.ccayef.org/"/>
            </Frame>
            
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>